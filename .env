# --- SCAMS System Configuration ---

# Mock Services Ports
ROMS_PORT=3001
AI_PORT=3004

# Core Services Ports
AUTH_PORT=3002
BOOKING_PORT=3003

# Security Secrets
# In a real project, this should be a long, randomly generated string.
JWT_SECRET=your-super-secret-and-long-key-that-is-not-this

# PostgreSQL Database Configuration
POSTGRES_USER=scams_user
POSTGRES_PASSWORD=scams_password
POSTGRES_DB=scams_auth_db

# Full connection string for our services
DATABASE_URL=postgres://scams_user:scams_password@postgres-db:5432/scams_auth_db

# Kong API Gateway Database Configuration
KONG_DB_USER=kong_user
KONG_DB_PASSWORD=kong_password
KONG_DB_NAME=kong_db

# RabbitMQ Event Broker Configuration
RABBITMQ_USER=scams_user
RABBITMQ_PASS=scams_password
RABBITMQ_URL=amqp://scams_user:scams_password@rabbitmq:5672